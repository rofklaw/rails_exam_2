<% if flash[:errors] %>
	<% flash[:errors].each do |e| %>
		<p><%= e %></p>
	<% end %>
<% end %>

<h1> LOGIN </h1>
<form action="/session" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  Email:<input type="text" name="email"></input>
  Password<input type="password" name="password"></input>
  <input type="submit" value="login"></input>
</form>

<h1> REGISTER </h1>
<form action="/user" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  First Name:<input type="text" name="user[first_name]"></input>
  Last Name:<input type="text" name="user[last_name]"></input>
  Email:<input type="text" name="user[email]"></input>
  password: <input type="password" name="user[password]"></input>
  confirm password: <input type="password" name="user[password_confirmation]"></input>
  <input type="submit" value="Register"></input>
</form>
